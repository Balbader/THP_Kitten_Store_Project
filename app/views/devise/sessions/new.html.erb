
<div class="container login-container d-flex justify-content-center">
                <div class="col-md-6 login-form-1">
                    <h3>Login</h3>
                    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="Your Email *" value="" <%= f.email_field :email, autofocus: true, autocomplete: "email"%>
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control" placeholder="Your Password *" value="" <%= f.password_field :password, autocomplete: "current-password"%>
                        </div>
                        <div class="form-group">
                            <input type="submit" class="btnSubmit" value="Login"<%= f.submit "Log in" %>
                        </div>
                          <% if devise_mapping.rememberable? %>
                              <div class="field">
                                  <%= f.check_box :remember_me %>
                                   <%= f.label :remember_me %>
                              </div>
                          <% end %>
                    <% end %>  
                    <%= render "devise/shared/links" %>
                </div>
</div>


